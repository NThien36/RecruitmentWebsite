@using FPT.Utility.Helpers
@model Job
@{
    ViewData["Title"] = "Detail";
}

<div class="px-6 md:px-16">
    <!-- Banner -->
    <div class="rounded-xl p-5 sm:p-10 bg-cover bg-fixed" style="background-image: linear-gradient(to bottom, rgba(2,79,160), transparent), url(/images/system/fptdiscussion.jpg);">
        <div class="flex flex-wrap gap-3">
            <div class="p-2 border border-white rounded-md w-fit"><img src="~/images/companyLogo/@(Model.Company?.Logo ?? "noLogoCompany.jpg")" alt="Avatar" class="h-32 w-32 object-contain"></div>
            <div class="flex flex-col gap-3 justify-between text-white">
                <div>
                    <p class="text-2xl font-semibold">@Model.Title</p>
                    <p class="my-1"><span class="font-semibold">@(Model.Company?.Name ?? "Unknown"). </span>@(Model.Company?.City != null ? Model.Company.City.Name : "Unknown") City</p>
                    <p class="text-sm">Posted @DateTimeHelper.GetTimeAgoString(Model.CreatedAt)</p>
                </div>
                <a href="" class="w-fit p-3 bg-MyBlue rounded-md text-xs hover:bg-MyPaleBlue hover:text-MyBlue">View Company</a>
            </div>
        </div>
    </div>

    <!-- Job Detail -->
    <div class="p-6 mt-5 mb-32 rounded-md border border-MyGrey">
        <div class="flex flex-wrap gap-3 justify-between">
            <div class="flex flex-col gap-2">
                <div class="flex items-center gap-2">
                    <i class="fa-solid fa-earth-asia text-MyGrey text-lg"></i>
                    <p>@Model.Address</p>
                </div>
                <div class="flex items-center gap-2">
                    <i class="fa-solid fa-circle-info text-MyGrey text-lg"></i>
                    <p>@(Model.Category?.Name ?? "Unknown")</p>
                </div>
                <div class="flex items-center gap-2">
                    <i class="fa-regular fa-clock text-MyGrey text-lg"></i>
                    <p>@(Model.JobType?.Name ?? "Unknown")</p>
                </div>
                <div class="flex items-center gap-2">
                    <i class="fa-solid fa-clock-rotate-left text-MyGrey text-lg"></i>
                    <p>@Model.Deadline.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
            <div class="text-MyDarkGrey text-2xl hover:cursor-pointer hover:text-MyOrange">
                <i class="fa-solid fa-circle-exclamation"></i>
            </div>
        </div>
        <div class="h-0.5 w-full bg-MyPaleGrey my-5"></div>
        <div>
            <p class="text-xl font-semibold mb-2">Job Description</p>
            <p>@Model.Description</p>
        </div>
        <div class="h-0.5 w-full bg-MyPaleGrey my-5"></div>
        <div>
            <p class="text-xl font-semibold mb-2">Responsibilities</p>
            <p>@Model.Responsibility</p>
        </div>
        <div class="h-0.5 w-full bg-MyPaleGrey my-5"></div>
        <div>
            <p class="text-xl font-semibold mb-2">Your Skills and Experience</p>
            <p>@Model.Experience</p>
        </div>
        <div class="h-0.5 w-full bg-MyPaleGrey my-5"></div>
        <div>
            <p class="text-xl font-semibold mb-2">Additional Information</p>
            <p>@Model.AdditionalDetail</p>
        </div>
        <div class="h-0.5 w-full bg-MyPaleGrey my-5"></div>
        <div>
            <p class="text-2xl font-semibold">@(Model.Company?.Name ?? "Unknown")</p>
            <p class="text-sm text-MyDarkGrey">@(Model.Company?.About ?? "Unknown")</p>
            <div class="flex flex-wrap gap-5 md:gap-10 mt-3">
                <div class="font-semibold">
                    <p class="text-MyDarkGrey text-xs">Company Size</p>
                    <p class="text-sm">@Model.Company?.Size</p>
                </div>
            </div>
        </div>
    </div>
</div>
