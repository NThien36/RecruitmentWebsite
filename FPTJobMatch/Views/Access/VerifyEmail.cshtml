@{
    ViewData["Title"] = "Email Verifying";
}

<div class="flex flex-col text-center mt-2 py-20">
    <p class="text-3xl font-extrabold text-MyOrange mb-3">Verify your email address</p>
    <p>We've sent a verification email to <span class="font-semibold">@ViewBag.EmailVerify</span></p>
    <p class="mb-5">
        If you don't see any email, please look at Spam or Junk folder.
    </p>
    <img src="~/images/system/EmailSending.png" alt="" class="w-96 mx-auto">
</div>